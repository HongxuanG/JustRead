{
    "manifest_version": 3,
    "name": "Just read",
    "version": "0.2",
    "description": "Simplify Zhihu home page",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "permissions": [
        "alarms"
    ],
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://www.zhihu.com/*",
                "https://www.zhihu.com/question/*"
            ]
        }
    ]
}